<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/color_main"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textViewIdPost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="348dp"
                    android:fontFamily="@font/font"
                    android:paddingLeft="5dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toStartOf="@+id/imageButtonInfoPost"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"></TextView>

                <ImageButton
                    android:id="@+id/imageButtonInfoPost"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/icons_ellipsis"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"></ImageButton>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/textViewTitlePost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="@font/font"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            ></TextView>
        <TextView
            android:layout_weight="1"
            android:id="@+id/textViewDatePost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:paddingLeft="20dp"
            android:textColor="@color/white"
            android:fontFamily="@font/font"
            android:textSize="10sp"
            ></TextView>
        <TextView
            android:id="@+id/textViewDesPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="Description"
            android:paddingLeft="10dp"
            android:textColor="@color/white"
            android:fontFamily="@font/font"></TextView>
        <ImageView
            android:id="@+id/imageViewPost"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:padding="2dp"
            android:layout_gravity="center">
        </ImageView>
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:padding="0dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonLikePost"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/custom_btn_post"
                android:text="Thích"
                android:textAllCaps="false"
                android:textColor="@color/white"
                tools:ignore="TouchTargetSizeCheck"></Button>

            <Button
                android:id="@+id/buttonCommentPost"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/custom_btn_post"
                android:text="Bình luận"
                android:textAllCaps="false"
                android:textColor="@color/white"
                tools:ignore="TouchTargetSizeCheck"></Button>

            <Button
                android:id="@+id/buttonSharePost"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/custom_btn_post"
                android:text="Chia sẻ"
                android:textAllCaps="false"
                android:textColor="@color/white"
                tools:ignore="TouchTargetSizeCheck"></Button>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>